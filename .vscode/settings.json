{
    "markdownlint.ignore": [
        ".gitkeep", "LICENSE"
    ],
    "shellcheck.exclude": ["1091"],
    "terminal.integrated.scrollback": 2500,
    "[markdown]": {
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/",
        "editor.rulers": [120],
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": true,
        "editor.wordWrap": "on"
    },
    "[shellscript]": {
        "editor.rulers": [100],
        "files.eol": "\n"
    },
    "cSpell.words": [
        "csgo",
        "DOCKERHUB",
        "gamesvr",
        "Laclede's",
        "Lacledeâ€™s",
        "lacledeslan",
        "mapgroup",
        "orangebox",
        "srcds",
        "tickrate"
    ]
}
